<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MonthView">
        <attr name="day_height" format="dimension" />
        <attr name="day_textSize" format="dimension" />
        <attr name="day_radius" format="dimension" />
        <attr name="day_clickable" format="boolean" />

        <attr name="day_textColor" format="color" />
        <attr name="hint_day_textColor" format="color"/>
        <attr name="weekday_textColor" format="color" />
        <attr name="highlight_day_textColor" format="color" />
        <attr name="highlight_color" format="color" />
    </declare-styleable>

    <color name="nc_default_day_text_color">#333333</color>
    <color name="nc_default_highlight_day_text_color">#1e89ff</color>
    <color name="nc_default_weekday_text_color">#666666</color>
    <color name="nc_default_highlight_color">#bfdfff</color>
    <color name="nc_default_hint_day_text_color">#999999</color>

    <string-array name="monday_first_english_weekday_name">
        <item>MON</item>
        <item>TUE</item>
        <item>WED</item>
        <item>THU</item>
        <item>FRI</item>
        <item>SAT</item>
        <item>SUN</item>
    </string-array>

    <string-array name="sunday_first_english_weekday_name">
        <item>SUN</item>
        <item>MON</item>
        <item>TUE</item>
        <item>WED</item>
        <item>THU</item>
        <item>FRI</item>
        <item>SAT</item>
    </string-array>
</resources>